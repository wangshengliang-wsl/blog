---
import BaseLayout from '~/layouts/BaseLayout.astro'
import VinylSidebar from '~/components/music/VinylSidebar.astro'
import Gramophone from '~/components/music/Gramophone.astro'
import SongList from '~/components/music/SongList.astro'

import albumsData from '~/content/music/data.json'

const title = '唱片机'
const description = '唱片机音乐播放器'
---

<BaseLayout {title} {description} bgType="plum">
  <div class="music-page-wrapper">
    <div class="music-player-container">
      <!-- 左侧唱片列表侧边栏 -->
      <div class="sidebar-wrapper left">
        <VinylSidebar albums={albumsData} />
        <button
          class="sidebar-toggle left-toggle"
          id="left-sidebar-toggle"
          aria-label="折叠唱片库"
        >
          <span class="i-ri-arrow-left-s-line"></span>
        </button>
      </div>

      <!-- 中央留声机 -->
      <div class="gramophone-section">
        <Gramophone />
      </div>

      <!-- 右侧歌曲列表 -->
      <div class="sidebar-wrapper right">
        <button
          class="sidebar-toggle right-toggle"
          id="right-sidebar-toggle"
          aria-label="折叠播放列表"
        >
          <span class="i-ri-arrow-right-s-line"></span>
        </button>
        <SongList />
      </div>
    </div>

    <!-- 移动端底部控制栏 -->
    <div class="mobile-controls">
      <button
        id="mobile-sidebar-toggle"
        class="mobile-btn"
        aria-label="唱片列表"
      >
        <span class="i-ri-album-line"></span>
      </button>
      <button id="mobile-songs-toggle" class="mobile-btn" aria-label="歌曲列表">
        <span class="i-ri-list-unordered"></span>
      </button>
    </div>
  </div>
</BaseLayout>

<style>
  .music-page-wrapper {
    position: fixed;
    inset: 0;
    top: 4rem;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .music-player-container {
    flex: 1;
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    position: relative;
    overflow: hidden;
  }

  /* 侧边栏包裹器 - 使用固定定位，不影响布局 */
  .sidebar-wrapper {
    position: fixed;
    top: 4rem;
    bottom: 0;
    height: auto;
    z-index: 50;
    transition: transform 0.3s ease;
  }

  .sidebar-wrapper.left {
    left: 0;
    width: 260px;
  }

  .sidebar-wrapper.right {
    right: 0;
    width: 260px;
    display: flex;
    justify-content: flex-end;
  }

  .sidebar-wrapper.left.collapsed {
    transform: translateX(-260px);
  }

  .sidebar-wrapper.right.collapsed {
    transform: translateX(260px);
  }

  /* 折叠按钮 */
  .sidebar-toggle {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 20px;
    height: 48px;
    background: rgba(128, 128, 128, 0.08);
    border: 1px solid rgba(128, 128, 128, 0.15);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
    z-index: 10;
  }

  .sidebar-toggle:hover {
    background: rgba(139, 69, 19, 0.1);
    border-color: rgba(139, 69, 19, 0.3);
  }

  .sidebar-toggle span {
    font-size: 1rem;
    opacity: 0.6;
    transition: transform 0.3s ease;
  }

  .sidebar-toggle:hover span {
    opacity: 1;
    color: #8b4513;
  }

  .left-toggle {
    right: -20px;
    border-radius: 0 6px 6px 0;
    border-left: none;
  }

  .right-toggle {
    left: -20px;
    border-radius: 6px 0 0 6px;
    border-right: none;
  }

  /* 折叠状态下的按钮图标翻转 */
  .sidebar-wrapper.left.collapsed .left-toggle span {
    transform: rotate(180deg);
  }

  .sidebar-wrapper.right.collapsed .right-toggle span {
    transform: rotate(180deg);
  }

  .music-player-container :global(.vinyl-sidebar) {
    width: 260px;
    height: 100%;
    margin: 0;
    padding: 0 0.75rem;
    border-radius: 0;
    background: var(--c-bg);
    border-right: 1px solid rgba(128, 128, 128, 0.1);
  }

  .music-player-container :global(.song-list-container) {
    width: 260px;
    height: 100%;
    margin: 0;
    padding: 0 0.75rem;
    border-radius: 0;
    background: var(--c-bg);
    border-left: 1px solid rgba(128, 128, 128, 0.1);
  }

  .gramophone-section {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    width: 100%;
    overflow: hidden;
    padding: 0.5rem;
  }

  .mobile-controls {
    display: none;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: var(--c-bg);
    border-top: 1px solid rgba(128, 128, 128, 0.2);
    padding: 0.75rem 1rem;
    padding-bottom: calc(0.75rem + env(safe-area-inset-bottom, 0px));
    justify-content: center;
    gap: 3rem;
    z-index: 200;
    box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.1);
  }

  .mobile-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 52px;
    height: 52px;
    border-radius: 50%;
    background: rgba(139, 69, 19, 0.1);
    border: 2px solid rgba(139, 69, 19, 0.2);
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .mobile-btn:hover,
  .mobile-btn:active {
    background: rgba(139, 69, 19, 0.2);
    border-color: rgba(139, 69, 19, 0.4);
    transform: scale(1.05);
  }

  .mobile-btn span {
    font-size: 1.5rem;
    opacity: 0.8;
    color: #8b4513;
  }

  /* 平板适配 */
  @media (max-width: 1024px) {
    .sidebar-wrapper.left {
      width: 200px;
    }

    .sidebar-wrapper.left.collapsed {
      transform: translateX(-200px);
    }

    .sidebar-wrapper.right {
      transform: translateX(260px);
    }

    .sidebar-toggle {
      display: none;
    }

    .music-player-container :global(.vinyl-sidebar) {
      width: 200px;
    }

    .music-player-container :global(.song-list-container) {
      width: 260px;
    }

    .music-player-container :global(.song-list-container.active) {
      transform: translateX(0);
    }

    .sidebar-wrapper.right.active {
      transform: translateX(0);
    }

    .mobile-controls {
      display: flex;
    }
  }

  /* 移动端适配 */
  @media (max-width: 768px) {
    .music-page-wrapper {
      bottom: 4.5rem;
    }

    .sidebar-wrapper.left {
      width: 260px;
      bottom: 4.5rem;
      transform: translateX(-260px);
      z-index: 150;
    }

    .sidebar-wrapper.right {
      width: 260px;
      bottom: 4.5rem;
      transform: translateX(260px);
      z-index: 150;
    }

    .music-player-container :global(.vinyl-sidebar) {
      width: 260px;
      box-shadow: 4px 0 20px rgba(0, 0, 0, 0.1);
    }

    .music-player-container :global(.vinyl-sidebar.active) {
      transform: translateX(0);
    }

    .sidebar-wrapper.left.active {
      transform: translateX(0);
    }

    .music-player-container :global(.song-list-container) {
      width: 260px;
      box-shadow: -4px 0 20px rgba(0, 0, 0, 0.1);
    }

    .sidebar-wrapper.right.active {
      transform: translateX(0);
    }

    .gramophone-section {
      padding: 0.25rem;
    }

    .mobile-controls {
      padding: 0.6rem 1rem;
      padding-bottom: calc(0.6rem + env(safe-area-inset-bottom, 0px));
    }

    .mobile-btn {
      width: 48px;
      height: 48px;
    }
  }

  /* 小屏幕手机适配 */
  @media (max-width: 480px) {
    .music-player-container :global(.vinyl-sidebar),
    .music-player-container :global(.song-list-container) {
      width: 85%;
      max-width: 280px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
    }
  }

  /* 隐藏 cd .. 模块 */
  :global(footer .font-mono) {
    display: none;
  }

  /* 在移动端隐藏页脚，避免误触 */
  @media (max-width: 768px) {
    :global(footer) {
      display: none !important;
    }

    /* 禁止页面滚动 */
    :global(html),
    :global(body) {
      overflow: hidden !important;
      height: 100% !important;
      position: fixed !important;
      width: 100% !important;
    }
  }
</style>

<script>
  document.addEventListener('astro:page-load', () => {
    const sidebarToggle = document.getElementById('mobile-sidebar-toggle')
    const songsToggle = document.getElementById('mobile-songs-toggle')

    // PC 端侧边栏折叠控制
    const leftSidebarToggle = document.getElementById('left-sidebar-toggle')
    const rightSidebarToggle = document.getElementById('right-sidebar-toggle')
    const leftWrapper = document.querySelector('.sidebar-wrapper.left')
    const rightWrapper = document.querySelector('.sidebar-wrapper.right')

    leftSidebarToggle?.addEventListener('click', () => {
      leftWrapper?.classList.toggle('collapsed')
    })

    rightSidebarToggle?.addEventListener('click', () => {
      rightWrapper?.classList.toggle('collapsed')
    })

    // 移动端控制 - 控制 wrapper 的 active 类
    sidebarToggle?.addEventListener('click', () => {
      leftWrapper?.classList.toggle('active')
      rightWrapper?.classList.remove('active')
    })

    songsToggle?.addEventListener('click', () => {
      rightWrapper?.classList.toggle('active')
      leftWrapper?.classList.remove('active')
    })

    // 点击其他区域关闭面板
    document.addEventListener('click', (e) => {
      const target = e.target as HTMLElement
      if (
        !target.closest('.sidebar-wrapper') &&
        !target.closest('.mobile-controls')
      ) {
        leftWrapper?.classList.remove('active')
        rightWrapper?.classList.remove('active')
      }
    })
  })
</script>
