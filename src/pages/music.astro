---
import BaseLayout from '~/layouts/BaseLayout.astro'
import VinylSidebar from '~/components/music/VinylSidebar.astro'
import Gramophone from '~/components/music/Gramophone.astro'
import SongList from '~/components/music/SongList.astro'

import albumsData from '~/content/music/data.json'

const title = 'Music Player'
const description = '复古留声机音乐播放器'
---

<BaseLayout {title} {description} bgType="plum">
  <div class="music-page-wrapper">
    <div class="music-player-container">
      <!-- 左侧唱片列表侧边栏 -->
      <VinylSidebar albums={albumsData} />

      <!-- 中央留声机 -->
      <div class="gramophone-section">
        <Gramophone />
      </div>

      <!-- 右侧歌曲列表 -->
      <SongList />
    </div>

    <!-- 移动端底部控制栏 -->
    <div class="mobile-controls">
      <button
        id="mobile-sidebar-toggle"
        class="mobile-btn"
        aria-label="唱片列表"
      >
        <span class="i-ri-album-line"></span>
      </button>
      <button id="mobile-songs-toggle" class="mobile-btn" aria-label="歌曲列表">
        <span class="i-ri-list-unordered"></span>
      </button>
    </div>
  </div>
</BaseLayout>

<style>
  .music-page-wrapper {
    position: fixed;
    inset: 0;
    top: 4rem;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .music-player-container {
    display: grid;
    grid-template-columns: 260px 1fr 260px;
    gap: 0;
    flex: 1;
    width: 100%;
    margin: 0;
    padding: 0;
    position: relative;
    overflow: hidden;
  }

  .music-player-container :global(.vinyl-sidebar) {
    height: 100%;
    margin: 0;
    padding: 0 0.75rem;
    border-radius: 0;
    background: rgba(128, 128, 128, 0.03);
    border-right: 1px solid rgba(128, 128, 128, 0.1);
  }

  .music-player-container :global(.song-list-container) {
    height: 100%;
    margin: 0;
    padding: 0 0.75rem;
    border-radius: 0;
    background: rgba(128, 128, 128, 0.03);
    border-left: 1px solid rgba(128, 128, 128, 0.1);
  }

  .gramophone-section {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    width: 100%;
    overflow: hidden;
    padding: 0.5rem;
  }

  .mobile-controls {
    display: none;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: var(--c-bg);
    border-top: 1px solid rgba(128, 128, 128, 0.2);
    padding: 0.75rem 1rem;
    padding-bottom: calc(0.75rem + env(safe-area-inset-bottom, 0px));
    justify-content: center;
    gap: 3rem;
    z-index: 200;
    box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.1);
  }

  .mobile-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 52px;
    height: 52px;
    border-radius: 50%;
    background: rgba(139, 69, 19, 0.1);
    border: 2px solid rgba(139, 69, 19, 0.2);
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .mobile-btn:hover,
  .mobile-btn:active {
    background: rgba(139, 69, 19, 0.2);
    border-color: rgba(139, 69, 19, 0.4);
    transform: scale(1.05);
  }

  .mobile-btn span {
    font-size: 1.5rem;
    opacity: 0.8;
    color: #8b4513;
  }

  /* 平板适配 */
  @media (max-width: 1024px) {
    .music-player-container {
      grid-template-columns: 200px 1fr;
    }

    .music-player-container :global(.song-list-container) {
      position: fixed;
      right: 0;
      top: 4rem;
      bottom: 0;
      width: 260px;
      transform: translateX(100%);
      transition: transform 0.3s ease;
      z-index: 90;
      background: var(--c-bg);
      border-left: 1px solid rgba(128, 128, 128, 0.2);
    }

    .music-player-container :global(.song-list-container.active) {
      transform: translateX(0);
    }

    .mobile-controls {
      display: flex;
    }
  }

  /* 移动端适配 */
  @media (max-width: 768px) {
    .music-page-wrapper {
      bottom: 4.5rem;
    }

    .music-player-container {
      grid-template-columns: 1fr;
    }

    .music-player-container :global(.vinyl-sidebar) {
      position: fixed;
      left: 0;
      top: 4rem;
      bottom: 4.5rem;
      width: 260px;
      transform: translateX(-100%);
      transition: transform 0.3s ease;
      z-index: 150;
      background: var(--c-bg);
      border-right: 1px solid rgba(128, 128, 128, 0.2);
      box-shadow: 4px 0 20px rgba(0, 0, 0, 0.1);
    }

    .music-player-container :global(.vinyl-sidebar.active) {
      transform: translateX(0);
    }

    .music-player-container :global(.song-list-container) {
      bottom: 4.5rem;
      z-index: 150;
      box-shadow: -4px 0 20px rgba(0, 0, 0, 0.1);
    }

    .gramophone-section {
      padding: 0.25rem;
    }

    .mobile-controls {
      padding: 0.6rem 1rem;
      padding-bottom: calc(0.6rem + env(safe-area-inset-bottom, 0px));
    }

    .mobile-btn {
      width: 48px;
      height: 48px;
    }
  }

  /* 小屏幕手机适配 */
  @media (max-width: 480px) {
    .music-player-container :global(.vinyl-sidebar),
    .music-player-container :global(.song-list-container) {
      width: 85%;
      max-width: 280px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
    }
  }

  /* 隐藏 cd .. 模块 */
  :global(footer .font-mono) {
    display: none;
  }

  /* 在移动端隐藏页脚，避免误触 */
  @media (max-width: 768px) {
    :global(footer) {
      display: none !important;
    }

    /* 禁止页面滚动 */
    :global(html),
    :global(body) {
      overflow: hidden !important;
      height: 100% !important;
      position: fixed !important;
      width: 100% !important;
    }
  }
</style>

<script>
  document.addEventListener('astro:page-load', () => {
    const sidebarToggle = document.getElementById('mobile-sidebar-toggle')
    const songsToggle = document.getElementById('mobile-songs-toggle')
    const sidebar = document.querySelector('.vinyl-sidebar')
    const songList = document.querySelector('.song-list-container')

    sidebarToggle?.addEventListener('click', () => {
      sidebar?.classList.toggle('active')
      songList?.classList.remove('active')
    })

    songsToggle?.addEventListener('click', () => {
      songList?.classList.toggle('active')
      sidebar?.classList.remove('active')
    })

    // 点击其他区域关闭面板
    document.addEventListener('click', (e) => {
      const target = e.target as HTMLElement
      if (
        !target.closest('.vinyl-sidebar') &&
        !target.closest('.song-list-container') &&
        !target.closest('.mobile-controls')
      ) {
        sidebar?.classList.remove('active')
        songList?.classList.remove('active')
      }
    })
  })
</script>
