{/* 移动端 TOC 抽屉触发按钮 */}
<button
  id="toc-open-button"
  class="toc-drawer-trigger z-50 fixed left-5 bottom-24
    w-12 h-12 rounded-full
    op-0 pointer-events-none op-transition
    lt-lgp:(op-50 pointer-events-auto)
    hover:op-100 print:hidden"
  title="打开目录"
  aria-label="打开目录"
>
  <div u-i-lucide-table-of-contents class="text-gray-700 dark:text-gray-200">
  </div>
</button>

{/* 移动端 TOC 抽屉 */}
<div class="toc-drawer hidden lt-lgp:block" id="toc-drawer">
  <div class="toc-drawer-overlay" id="toc-drawer-overlay"></div>
  <div class="toc-drawer-content">
    <div class="toc-drawer-header">
      <span class="toc-drawer-title">目录</span>
      <button
        type="button"
        class="toc-drawer-close"
        id="toc-drawer-close"
        aria-label="关闭"
      >
        <span class="i-ri-close-line text-xl"></span>
      </button>
    </div>
    <nav class="toc-drawer-nav">
      <ul class="text-sm">
        <slot />
      </ul>
    </nav>
  </div>
</div>

<style>
  /* 移动端抽屉触发按钮 */
  .toc-drawer-trigger {
    background: var(--c-bg);
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.15);
    border: 1px solid rgba(125, 125, 125, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s;
  }

  .toc-drawer-trigger:hover {
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
    transform: scale(1.05);
  }

  /* 抽屉遮罩 */
  .toc-drawer-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    opacity: 0;
    transition: opacity 0.3s;
    pointer-events: none;
    z-index: 200;
  }

  /* 抽屉内容 */
  .toc-drawer-content {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    width: 80%;
    max-width: 300px;
    background: var(--c-bg);
    transform: translateX(-100%);
    transition: transform 0.3s ease;
    display: flex;
    flex-direction: column;
    z-index: 201;
    box-shadow: 2px 0 12px rgba(0, 0, 0, 0.1);
  }

  .toc-drawer.open .toc-drawer-overlay {
    opacity: 1;
    pointer-events: auto;
  }

  .toc-drawer.open .toc-drawer-content {
    transform: translateX(0);
  }

  .toc-drawer-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem;
    border-bottom: 1px solid rgba(125, 125, 125, 0.2);
    flex-shrink: 0;
    background: rgba(255, 255, 255, 0.3);
    backdrop-filter: saturate(180%) blur(12px);
    -webkit-backdrop-filter: saturate(180%) blur(12px);
  }

  :global(.dark) .toc-drawer-header {
    background: rgba(5, 5, 5, 0.3);
  }

  .toc-drawer-title {
    font-size: 0.9rem;
    font-weight: 500;
    opacity: 0.8;
  }

  .toc-drawer-close {
    background: none;
    border: none;
    cursor: pointer;
    opacity: 0.6;
    transition: opacity 0.2s;
    padding: 0.25rem;
  }

  .toc-drawer-close:hover {
    opacity: 1;
  }

  .toc-drawer-nav {
    flex: 1;
    overflow-y: auto;
    padding: 1rem;
  }

  .toc-drawer-nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc-drawer-nav :global(a) {
    display: block;
    padding: 0.375rem 0;
    font-size: 0.875rem;
    color: inherit;
    text-decoration: none;
    opacity: 0.75;
    transition: opacity 0.2s;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    border-bottom: none !important;
  }

  .toc-drawer-nav :global(a:hover) {
    opacity: 1;
  }

  .toc-drawer-nav :global(a[aria-current='true']) {
    opacity: 1;
    font-weight: 500;
  }
</style>

<script>
  document.addEventListener('astro:page-load', () => {
    const trigger = document.getElementById('toc-open-button')
    const drawer = document.getElementById('toc-drawer')
    const overlay = document.getElementById('toc-drawer-overlay')
    const closeBtn = document.getElementById('toc-drawer-close')

    const openDrawer = () => {
      drawer?.classList.add('open')
    }

    const closeDrawer = () => {
      drawer?.classList.remove('open')
    }

    trigger?.addEventListener('click', openDrawer)
    overlay?.addEventListener('click', closeDrawer)
    closeBtn?.addEventListener('click', closeDrawer)

    // 点击链接后关闭抽屉
    const tocNav = drawer?.querySelector('.toc-drawer-nav')
    tocNav?.addEventListener('click', (event: Event) => {
      const target = event.target
      if (target instanceof HTMLElement && target.closest('a')) {
        closeDrawer()
      }
    })
  })
</script>
